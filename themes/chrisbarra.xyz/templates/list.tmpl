{#  -*- coding: utf-8 -*- #}
{% extends 'base.tmpl' %}
{% block content %}
        <!--Body content-->
        <div class="postbox">
        <h1>{{ title }}</h1>
        {% if items %}
        <ul class="unstyled">
        {% for text, link, count in items %}
            <li><a href="{{ link }}">{{ text }}</a>
              {% if count %}
              ({{ count }})
              {% endif %}
        {% endfor %}
        </ul>
        {% endif %}
        </div>
        <!--End of body content-->
{% endblock %}
